{
    "pluginAlias": "Nordpool",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Bridge name",
                "type": "string",
                "required": true,
                "placeholder": "Nordpool",
                "description": "You'll see this name when you add the bridge in your Home app and in Homebridge logs.",
                "default": "Nordpool"
            },
            "area": {
                "title": "Nordpool Market Area",
                "type": "string",
                "required": true,
                "default": "LT",
                "oneOf": [
                    {
                        "title": "Lithuania",
                        "enum": ["LT"]
                    },
                    {
                        "title": "Latvia",
                        "enum": ["LV"]
                    },
                    {
                        "title": "Estonia",
                        "enum": ["EE"]
                    },
                    {
                        "title": "Finland",
                        "enum": ["Fi"]
                    }
                ]
            },
            "decimalPrecision": {
                "title": "Price Decimal Precision",
                "description": "This parameter is used for hourly price and median calculations.",
                "type": "integer",
                "required": false,
                "default": 1,
                "oneOf": [
                    {
                        "title": "0 Decimal - i.e. 4",
                        "enum": [0]
                    },
                    {
                        "title": "1 Decimal (Default) - i.e. 4.6",
                        "enum": [1]
                    },
                    {
                        "title": "2 Decimal - i.e. 4.68",
                        "enum": [2]
                    }
                ]
            },
            "excessivePriceMargin": {
                "title": "Excessive Price Margin Above Median",
                "description": "Percentage value used as margin to calculate highest price(s) of the day. Default 200 (percent).",
                "required": false,
                "default": 200,
                "type": "integer",
                "minimum": 50,
                "maximum": 400
            },
            "plotTheChart": {
                "title": "Plot Electricity Price Chart",
                "description": "If enabled, current day Nordpool prices chart will show up in log at midnight or upon (re)start of the plugin.",
                "required": false,
                "default": false,
                "type": "boolean"
            },
            "cheapest4Hours": {
                "required": true,
                "type": "boolean",
                "default": true,
                "title": "Show 'cheapest 4 hours' sensor (Nordpool_cheapest4Hours)"
            },
            "cheapest5Hours": {
                "required": true,
                "type": "boolean",
                "default": true,
                "title": "Show 'cheapest 5 hours' sensor (Nordpool_cheapest5Hours)"
            },
            "cheapest6Hours": {
                "required": true,
                "type": "boolean",
                "default": true,
                "title": "Show 'cheapest 6 hours' sensor (Nordpool_cheapest6Hours)"
            },
            "cheapest7Hours": {
                "required": true,
                "type": "boolean",
                "default": true,
                "title": "Show 'cheapest 7 hours' sensor (Nordpool_cheapest7Hours)"
            },
            "cheapest8Hours": {
                "required": true,
                "type": "boolean",
                "default": true,
                "title": "Show 'cheapest 8 hours' sensor (Nordpool_cheapest8Hours)"
            },
            "cheapest5HoursConsec": {
                "required": true,
                "type": "boolean",
                "default": true,
                "title": "Show 'cheapest CONSECUTIVE 5 hours' sensor (Nordpool_cheapest5HoursConsec)"
            },
            "dynamicCheapestConsecutiveHours": {
                "title": "Dynamic Cheapest Consecutive 5 Hours",
                "description": "If enabled at 6PM it will try recalculate using day-ahead pricing. For more details go to <a href='https://github.com/msegzda/homebridge-nordpool-baltics/blob/latest/README.md#cheapest-consecutive-hours-calculation-logic' target='_blank'>plugin README</a>.",
                "required": false,
                "default": false,
                "type": "boolean"
            }
        }
    }
}
